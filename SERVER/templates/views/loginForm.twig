{% extends "base.twig" %}

{% block title %}
    {{ page_title }}
{% endblock %}

{% block content %}
<form name="loginForm" action="{{ action }}" target="_parent" method="post">

    <table style="width: 100%">
    
    	{% if error %}
	    <tr>
		    <td>
		    {% include 'partials/messages/error.twig' %}	
		    </td>
	    </tr>
		{% endif %}

        <tr>
            <td align="center">

                <table id="id_table_container">
                
                {% if data.logo_file_path %}
                	<tr><td><img id="id_logo" src="{{ data.logo_file_path }}" alt="Logo"></td></tr>
                {% endif %}
                
                {% if data.text_under_logo %}
                	<tr><td><span id="id_text_under_logo">{{ data.text_under_logo }}</span></td></tr>
                {% endif %}
                
                {% if data.show_current_date %}
                	<tr><td><span id="id_current_date">{{ currentDate }}</span></td></tr>
                {% endif %}


				{% for text in data.text_data %}
            		<tr><td>{{ data.text_data.label }}{{ data.text_data.text }}</td></tr>
                {% endfor %}
                    
   
				{% if data.logo_file_path and data.text_under_logo %}
					<tr><td>&nbsp;</td></tr>
                {% endif %}
                
                
                {% if error_message %}
                	<tr><td style="color: red">{{ error_message }}</td></tr>
                    <tr><td>&nbsp;</td></tr>
                {% endif %}
                
                {% if logout_message %}
                	<tr><td style="color: red">{{ logout_message }}</td></tr>
                    <tr><td>&nbsp;</td></tr>
                {% endif %}

                    
                    <tr><td>Użytkownik:</td></tr>
                    <tr><td><input class="input_login" type="text" name="login" value="{{ loginValue }}" autocomplete="{{ autocompleteValue }}"></td></tr>

                    <tr><td>Hasło:</td></tr>
                    <tr><td><input class="input_login" type="password" name="password"></td></tr>

                    <tr><td><input class="input_login" type="submit" value="Zaloguj"></td></tr>

                    <tr><td class="small_text">Wersja CMS: {{ version }}</tr>
                    <tr><td class="small_text">IP: {{ ip }}</tr>


                    <tr><td class="small_text">&nbsp;</td></tr>
                    <tr><td class="small_text">{{ support_message }}</td></tr>
                    <tr><td class="small_text">&nbsp;</td></tr>

                </table>

            </td>
        </tr>

    </table>

</form>

<script>
{% if loginValue %}
	document.loginForm.password.focus();
{% else %}
	document.loginForm.login.focus();
{% endif %}
</script>

{% endblock %}

